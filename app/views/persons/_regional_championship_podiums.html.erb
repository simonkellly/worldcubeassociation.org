<%= react_component("Persons/RegionalChampionshipPodiums", {
  title: title,
  competitions: results.group_by(&:competition).map { |competition, results| {
    id: competition.id,
    name: competition.name,
    url: competition.internal_website,
    results: results.map { |result| {
      id: result.id,
      eventId: result.event.id,
      pos: result.pos,
      single: result.best_solve.clock_format,
      average: result.average_solve.clock_format,
      bestIdx: result.best_index,
      worstIdx: result.worst_index,
      attempts: result.solve_times.map { |time| time.clock_format },
      trimmedIdx: result.trimmed_indices,
    } },
  }},
}) %>
